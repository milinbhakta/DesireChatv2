{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": [
            "./tsconfig.json"
        ]
    },
    "extends": [
        "airbnb-typescript/base",
        "prettier"
    ],
    "plugins": [
        "import",
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "import/extensions": 0
    },
    "settings": {
        "import/parsers": {
            "@typescript-eslint/parser": [
                ".ts",
                ".tsx"
            ]
        },
        "import/resolver": {
            "typescript": {}
        }
    }
}